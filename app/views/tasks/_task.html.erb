<turbo-frame id="<%= dom_id task %>" class="block px-10 ">
<div class="flex justify-between ">
  <%= form_with(model: task, class:"text-lg inline-block my-3 w-100") do |form| %>
    <%= form.check_box :completed, data: {
                                        id:task.id,
                                        action: "tasks#toggle"
                                        },
                                        class: "mr-2 align-middle bg-gray-50 border-gray-300 focus:ring-3 focus:ring-blue-300 h-5 w-5 rounded checked:bg-green-500" %>
    <%= task.description %>
  <% end %>
    
    
  <div class=" flex flex-row">
  <%= link_to "Edit", edit_task_path(task), class: "btn bg-gray-100 mr-6 w-[89px] h-[32px]" %>
<%= button_to "Delete", task_path(task), method: :delete, data: { "turbo-frame": "_top" }, class: "btn bg-red-100" %>
    
  </div>
</div>
</turbo-frame>